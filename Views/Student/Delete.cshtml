@using MOAssignment1.Entities
@model Student

@{
    ViewData["Title"] = "Delete Student";
}
<!--Here is where wee show the Studente first name and data of birsth and ask to the user confirm to delete-->
<h6>Confirm Deletion</h6>
<h3>@Model.FirstName (@Model.dataOfBirth)</h3>

<form asp-controller="Student" asp-action="Delete" method="post" enctype="application/x-www-form-urlencoded">
    <input type="hidden" asp-for="StudentId" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Students" asp-action="List" class="btn btn-primary">Cancel</a>
</form>
